<h3>Update Empoloyees Details - <%= @employee.first_name %> <%= @employee.last_name %> </h3>

<%= render 'form', employee: @employee %>

<br />

<h3>Children</h3>
<% if @employee.children.count == 0 %>
    <p>This employee does not have children</p>
    <% else %>
    <table>
        <thead>
            <tr>
            <th>ID</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Birth date</th>
            <th>Gender</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @employee.children.each do |child| %>
                <tr>
                    <td><%= child.id %></td>
                    <td><%= child.first_name%></td>
                    <td><%= child.last_name %></td>
                    <td><%= child.birth_date.strftime('%m/%d/%Y') %></td>
                    <td><%= child.gender %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
